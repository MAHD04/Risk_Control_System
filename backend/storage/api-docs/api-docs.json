    "components": {
        "schemas": {
            "AttachActionsRequest": {
                "title": "Attach Actions Request",
                "description": "Attach Actions request body data",
                "required": [
                    "action_ids"
                ],
                "properties": {
                    "action_ids": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "example": [
                            1,
                            2
                        ]
                    }
                },
                "type": "object"
            },
            "StoreAccountRequest": {
                "title": "Store Account Request",
                "description": "Store Account request body data",
                "required": [
                    "login"
                ],
                "properties": {
                    "login": {
                        "type": "integer",
                        "example": 123456
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "enable",
                            "disable"
                        ],
                        "example": "enable"
                    },
                    "trading_status": {
                        "type": "string",
                        "enum": [
                            "enable",
                            "disable"
                        ],
                        "example": "enable"
                    }
                },
                "type": "object"
            },
            "StoreRiskRuleRequest": {
                "title": "Store Risk Rule Request",
                "description": "Store Risk Rule request body data",
                "required": [
                    "name",
                    "rule_type",
                    "severity",
                    "incident_limit"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Max Daily Loss"
                    },
                    "description": {
                        "type": "string",
                        "example": "Limits daily loss to $500"
                    },
                    "rule_type": {
                        "type": "string",
                        "enum": [
                            "min_duration",
                            "volume_consistency",
                            "trade_frequency"
                        ],
                        "example": "min_duration"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "HARD",
                            "SOFT"
                        ],
                        "example": "HARD"
                    },
                    "incident_limit": {
                        "type": "integer",
                        "example": 3
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": true
                    },
                    "parameters": {
                        "type": "object",
                        "example": {
                            "min_duration_seconds": 60
                        }
                    }
                },
                "type": "object"
            },
            "StoreTradeRequest": {
                "title": "Store Trade Request",
                "description": "Store Trade request body data",
                "required": [
                    "account_id",
                    "type",
                    "volume",
                    "open_time",
                    "open_price",
                    "status"
                ],
                "properties": {
                    "account_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "BUY",
                            "SELL"
                        ],
                        "example": "BUY"
                    },
                    "volume": {
                        "type": "number",
                        "format": "float",
                        "example": 1.5
                    },
                    "open_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-10-27T10:00:00Z"
                    },
                    "close_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-10-27T12:00:00Z",
                        "nullable": true
                    },
                    "open_price": {
                        "type": "number",
                        "format": "float",
                        "example": 150
                    },
                    "close_price": {
                        "type": "number",
                        "format": "float",
                        "example": 155,
                        "nullable": true
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "OPEN",
                            "CLOSED"
                        ],
                        "example": "OPEN"
                    }
                },
                "type": "object"
            },
            "UpdateRiskRuleRequest": {
                "title": "Update Risk Rule Request",
                "description": "Update Risk Rule request body data",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Max Daily Loss Updated"
                    },
                    "description": {
                        "type": "string",
                        "example": "Updated description"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "HARD",
                            "SOFT"
                        ],
                        "example": "SOFT"
                    },
                    "incident_limit": {
                        "type": "integer",
                        "example": 5
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": false
                    },
                    "parameters": {
                        "type": "object",
                        "example": {
                            "min_duration_seconds": 120
                        }
                    }
                },
                "type": "object"
            },
            "UpdateTradeRequest": {
                "title": "Update Trade Request",
                "description": "Update Trade request body data",
                "properties": {
                    "close_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-10-27T12:00:00Z"
                    },
                    "close_price": {
                        "type": "number",
                        "format": "float",
                        "example": 155
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "OPEN",
                            "CLOSED"
                        ],
                        "example": "CLOSED"
                    }
                },
                "type": "object"
            }
        }
    },
